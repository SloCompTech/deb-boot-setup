#!/bin/bash
#
# Configuration
#
export BOOTSETUP_BIN=/etc/bootsetup
export BOOTSETUP_ROOT=/boot/bootsetup

export BOOTSETUP_DISABLE_FILE=$BOOTSETUP_ROOT/disable

export BOOTSETUP_LOCK_FILE=$BOOTSETUP_ROOT/lock
export BOOTSETUP_LOCK_FILE_DEST=$BOOTSETUP_BIN/lock
export BOOTSETUP_LOCK_DOCKER_FILE=$BOOTSETUP_ROOT/lock-docker
export BOOTSETUP_LOCK_DOCKER_FILE_DEST=$BOOTSETUP_BIN/lock-docker
export BOOTSETUP_LOCK_INIT_FILE=$BOOTSETUP_ROOT/lock-init
export BOOTSETUP_LOCK_INIT_FILE_DEST=$BOOTSETUP_BIN/lock-init
